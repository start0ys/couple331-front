<div id='calendar-container'>
  <div class="card" style="width: 100%;">
    <div class="card-body">
      <div id='calendar'></div>
      <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
        <input type="checkbox" class="btn-check" id="btncheck1" autocomplete="off" checked>
        <label class="btn btn-outline-primary small-btn" for="btncheck1">커플</label>
      
        <input type="checkbox" class="btn-check" id="btncheck2" autocomplete="off">
        <label class="btn btn-outline-primary small-btn" for="btncheck2">개인</label>
      
      </div>
    </div>
    </div>
  </div>

<div id='todo-container'>
    <div class="card mb-3" style="width: 100%; min-height: 40vh;">
      <div class="card-body">
        <button type="button" style="position: absolute;" class="btn btn-primary red-small-btn schedule-modal-opener" data-bs-toggle="modal" data-bs-target="#scheduleModal">추가</button>
        <h5 class="card-title" id="targetDayKo" style="text-align: center; font-weight: bold;">Special title treatment</h5>
        <input type="hidden" name="targetDay" id="targetDay">
        <ui id="detailList"></ui>
      </div>
    </div>
    
    <div class="card" style="width: 100%;">
      <div class="card-body">
        <h5 class="card-title" style="text-align: center; font-weight: bold;"><i class="bi bi-check2-square" style="margin-right: 3px;"></i>할 일</h5>
        
        <div id="todoList">
          <div class="list-group list-group-horizontal rounded-0 bg-transparent">
              <div class="form-check">
                <input class="form-check-input me-0" type="checkbox" value="" id="flexCheckChecked1"
                  aria-label="..." checked />
              </div>
              <p>할 일 테스트</p>
              <div class="d-flex flex-row justify-content-end mb-1">
                <a href="#!" class="text-info" data-mdb-tooltip-init title="Edit todo"><i class="bi bi-pencil-fill"></i></a>
                <a href="#!" class="text-danger" data-mdb-tooltip-init title="Delete todo"><i class="bi bi-trash3-fill"></i></a>
              </div>
          </div>
        </div>
      </div>
    </div>
</div>


  
  <!-- Modal -->
  <div class="modal fade" id="scheduleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="scheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="scheduleModalLabel">일정</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="closeModal"></button>
        </div>
        <div class="modal-body">
            <input type="text" class="form-control" id="scheduleText" placeholder="일정 입력해봐">
            <div class="tui-datepicker-input tui-datetime-input tui-has-focus">
                <input id="startDate" type="text" aria-label="Date">
                <span class="tui-ico-date" target-date="startDate"></span>
                <div id="startpicker-container" style="margin-left: -1px;"></div>
            </div>
            <span>~</span>
            <div class="tui-datepicker-input tui-datetime-input tui-has-focus">
                <input id="endDate" type="text" aria-label="Date">
                <span class="tui-ico-date" target-date="endDate"></span>
                <div id="endpicker-container" style="margin-left: -1px;"></div>
            </div>
        </div>
        <div class="modal-footer">
          <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> -->
          <button type="button" class="btn btn-primary red-small-btn" id="editSchedule">저장</button>
        </div>
      </div>
    </div>
  </div>